#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to home directory
cd "${HOME}"

# Set variables from user form inputs
ui="<%= context.jupyter_ui %>" # lab or notebook
extra_args="<%= context.enable_jupyter_args == "1" ? context.extra_jupyter_args : "" %>" # any extra args provided

# Load Jupyter module
module purge
module load jupyter

# Launch the Jupyter Notebook Server
set -x
jupyter $ui --config="${CONFIG_FILE}" $extra_args
